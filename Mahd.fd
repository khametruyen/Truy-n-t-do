export function luuTrangThai(truyenId, trangThai) {
  const key = `trangThai-${truyenId}`;
  localStorage.setItem(key, JSON.stringify(trangThai));
}

export function layTrangThai(truyenId) {
  const key = `trangThai-${truyenId}`;
  const data = localStorage.getItem(key);
  return data ? JSON.parse(data) : { daThich: false };
}
