import { useEffect } from 'react'

useEffect(() => {
  if (truyenId && chuongId) {
    const key = `read-truyen-${truyenId}`
    const saved = Number(localStorage.getItem(key) || '0')
    if (Number(chuongId) > saved) {
      localStorage.setItem(key, String(chuongId))
    }
  }
}, [truyenId, chuongId])
